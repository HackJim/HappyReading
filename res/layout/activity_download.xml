<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/load_radio_group"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:background="@drawable/secondlayer_searchbox_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_button_loading"
            android:layout_height="35dip"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:background="@drawable/load_top_button_left_selector"
            android:button="@null"
            android:gravity="center"
            android:text="正在下载"
            android:textColor="@color/search_book_font"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/radio_button_loaded"
            android:layout_height="35dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1"
            android:background="@drawable/load_top_button_right_selector"
            android:button="@null"
            android:gravity="center"
            android:text="已经下载"
            android:textColor="@color/search_book_font"
            android:textSize="12sp" />
    </RadioGroup>

    <ListView
        android:id="@+id/lv_load_show_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/search_book_bg"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0.0dip"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

</LinearLayout>